<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.pages.f_search.FilterFragment">


    <include layout="@layout/tool_bar"
        android:id="@+id/filter_tool_bar"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/filter_tool_bar"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/filter_layout_shape"
        >

        <TextView
            android:id="@+id/cat_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:fontFamily="@font/gilroy_semibold"
            android:text="Categories"
            android:textColor="#181725"
            android:textSize="@dimen/_21ssp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/cat_tv"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:id="@+id/cat_layout"
            >

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dummy"
                android:fontFamily="@font/gilroy_medium"
                android:textSize="@dimen/_12ssp"

                />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dummy"
                android:fontFamily="@font/gilroy_medium"
                android:textSize="@dimen/_12ssp"
                />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dummy"
                android:fontFamily="@font/gilroy_medium"
                android:textSize="@dimen/_12ssp"
                />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dummy"
                android:fontFamily="@font/gilroy_medium"
                android:textSize="@dimen/_12ssp"
                />





        </LinearLayout>

        <TextView
            android:id="@+id/brand_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:fontFamily="@font/gilroy_semibold"
            android:text="Brand"
            android:textColor="#181725"
            android:textSize="@dimen/_21ssp"
            android:layout_below="@+id/cat_layout"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/brand_tv"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical"

            >

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gilroy_medium"
                android:text="Dummy"
                android:textSize="@dimen/_12ssp"

                />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gilroy_medium"
                android:text="Dummy"
                android:textSize="@dimen/_12ssp" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gilroy_medium"
                android:text="Dummy"
                android:textSize="@dimen/_12ssp" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gilroy_medium"
                android:text="Dummy"
                android:textSize="@dimen/_12ssp" />


        </LinearLayout>




        <com.moashrafff.nectar.views.widgets.MainButton
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:text="Apply Filter"
            android:textSize="@dimen/_13ssp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/_10sdp"
            />



    </RelativeLayout>


</RelativeLayout>