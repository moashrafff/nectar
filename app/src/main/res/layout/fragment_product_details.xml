<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.pages.d_explore.ProductDetailsFragment">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_240sdp"
        android:background="@drawable/relative_shape"
        android:layout_alignParentTop="true"
        android:id="@+id/image_layout"
        >

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/tofaha_test" />

    </RelativeLayout>

    <include
        android:id="@+id/p_details_tool_bar"
        layout="@layout/tool_bar" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/image_layout"
        android:layout_marginBottom="@dimen/_5sdp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:id="@+id/product_layout"
                >

                <TextView
                    android:id="@+id/product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/gilroy_semibold"
                    android:text="Naturel Red Apple"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_21ssp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_black_like_icon"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    />


            </RelativeLayout>

            <TextView
                android:id="@+id/p_details_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp"
                android:fontFamily="@font/gilroy_medium"
                android:text="7pcs, Price"
                android:textColor="#7C7C7C"
                android:gravity="center"
                android:layout_below="@+id/product_layout"
                android:layout_marginStart="@dimen/_15sdp"
                android:textSize="@dimen/_14ssp"
                />

            <RelativeLayout
                android:id="@+id/q_p_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/p_details_price_tv">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_9sdp"
                    android:layout_marginVertical="@dimen/_15sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/ic_subtract_icon" />

                    <TextView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:background="@drawable/quantity_shape"
                        android:fontFamily="@font/gilroy_semibold"
                        android:gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:text="1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14ssp"

                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/ic_add_icon" />


                </LinearLayout>

                <TextView
                    android:id="@+id/prduct_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:fontFamily="@font/gilroy_bold"
                    android:gravity="center"
                    android:text="$4.99"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_17ssp" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/details_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/q_p_layout"
                android:orientation="vertical"
                android:paddingVertical="@dimen/_10sdp">

                <View
                    android:id="@+id/v1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_2sdp"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:background="#70E2E2E2"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/v1"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:clickable="true"
                    android:padding="@dimen/_8sdp">

                    <TextView
                        android:id="@+id/product_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/gilroy_semibold"
                        android:text="Product Details"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16ssp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_maximize_icon" />

                </RelativeLayout>

                <View
                    android:id="@+id/v2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_2sdp"
                    android:layout_below="@+id/q_p_layout"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:background="#70E2E2E2"

                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/v1"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:clickable="true"
                    android:padding="@dimen/_8sdp">

                    <TextView
                        android:id="@+id/nutrition_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/gilroy_semibold"
                        android:text="Nutriotion"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16ssp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_maximize_icon" />

                </RelativeLayout>

                <View
                    android:id="@+id/v3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_2sdp"
                    android:layout_below="@+id/q_p_layout"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:background="#70E2E2E2"

                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/v1"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:clickable="true"
                    android:padding="@dimen/_8sdp">

                    <TextView
                        android:id="@+id/review_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/gilroy_semibold"
                        android:text="Review"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16ssp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:src="@drawable/ic_rate_bar_icon" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_maximize_icon" />

                </RelativeLayout>

            </LinearLayout>

            <com.moashrafff.nectar.views.widgets.MainButton
                android:id="@+id/add_to_basket_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_below="@id/details_layout"
                android:layout_alignParentBottom="true"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:text="Add To Basket"
                android:textSize="@dimen/_12ssp" />

        </RelativeLayout>

    </ScrollView>








</RelativeLayout>